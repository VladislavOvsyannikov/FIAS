<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="persistence" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>system.model.ActualStatus</class>
        <class>system.model.AddressObjectType</class>
        <class>system.model.CenterStatus</class>
        <class>system.model.CurrentStatus</class>
        <class>system.model.EstateStatus</class>
        <class>system.model.FlatType</class>
        <class>system.model.House</class>
        <class>system.model.HouseStateStatus</class>
        <class>system.model.IntervalStatus</class>
        <class>system.model.NormativeDocument</class>
        <class>system.model.NormativeDocumentType</class>
        <class>system.model.AddrObject</class>
        <class>system.model.OperationStatus</class>
        <class>system.model.Room</class>
        <class>system.model.RoomType</class>
        <class>system.model.Stead</class>
        <class>system.model.StructureStatus</class>
        <class>system.model.User</class>
        <class>system.model.Version</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL57Dialect"/>
            <!--JNDI:-->
            <property name="hibernate.connection.datasource" value="java:comp/env/jdbc/MysqlDatabase"/>

            <!--<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>-->
            <!--<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/fias"/>-->
            <!--<property name="javax.persistence.jdbc.user" value="root" />-->
            <!--<property name="javax.persistence.jdbc.password" value="root" />-->

            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.jdbc.batch_size" value="100000"/>
            <property name="hibernate.order_inserts" value="true"/>
            <property name="hibernate.order_updates" value="true"/>
        </properties>
    </persistence-unit>
</persistence>