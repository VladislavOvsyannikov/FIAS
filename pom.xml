<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>FIAS</groupId>
    <artifactId>FIAS</artifactId>
    <version>1.0-SNAPSHOT</version>

    <build>
        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <compilerArgs>
                        <arg>-Amapstruct.defaultComponentModel=spring</arg>
                        <arg>-Amapstruct.unmappedTargetPolicy=ERROR</arg>
                        <arg>-Amapstruct.suppressGeneratorTimestamp=true</arg>
                    </compilerArgs>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>2.13</version>
                <executions>
                    <execution>
                        <id>integrationtests</id>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                        <configuration>
                            <includes>
                                <include>**/*IT.java</include>
                            </includes>
                            <skipTests>false</skipTests>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

    <packaging>war</packaging>

    <properties>
        <java.version>1.8</java.version>
        <mapstruct.version>1.2.0.Final</mapstruct.version>
        <spring.version>5.1.4.RELEASE</spring.version>
        <spring.security.version>5.1.2.RELEASE</spring.security.version>
        <lombok.version>1.18.2</lombok.version>
        <javax.servlet.version>4.0.1</javax.servlet.version>
        <jwt.version>0.10.5</jwt.version>
        <apache.commons-lang3.version>3.0</apache.commons-lang3.version>
        <spring-data.version>2.1.2.RELEASE</spring-data.version>
        <hibernate.version>5.3.3.Final</hibernate.version>
        <mysql.version>5.1.34</mysql.version>
        <jackson.version>2.9.5</jackson.version>
        <junrar.version>3.0.0</junrar.version>
        <log4j.version>2.11.1</log4j.version>
        <swagger.version>2.9.2</swagger.version>
        <apache.http.version>4.5.2</apache.http.version>
        <quartz.version>2.3.0</quartz.version>
        <spring-context-support.version>5.1.1.RELEASE</spring-context-support.version>
        <testng.version>6.13.1</testng.version>
        <powermock.version>1.7.1</powermock.version>
        <h2.version>1.4.197</h2.version>
        <spring-boot-starter-test.version>2.1.2.RELEASE</spring-boot-starter-test.version>
        <assertj.version>3.11.1</assertj.version>
    </properties>

